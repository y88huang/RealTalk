<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/yup"/>-->
    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/nope"/>-->

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="321dp"
        android:layout_height="260.5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:layout_marginTop="-2dp"/>

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="128dp"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/yup"
        android:alpha="0" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="128dp"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nope"
        android:alpha="0" />

    <TextView
        android:id="@+id/cardText"
        android:layout_width="321dp"
        android:layout_height="99dp"
        android:layout_below="@+id/cardImage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="-7dp"
        android:background="@drawable/onboarding_text_radius"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="Sometimes it's the journey that t\neaches you a lot ab\nout your destination." />


</RelativeLayout>

