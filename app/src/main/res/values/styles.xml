<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="RealTalk">
        <!-- Customize your theme here. -->
    </style>


    <style name="RealTalk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/status_bar_color</item>
    </style>

    <style name="RealTalk.TabBar" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabMaxWidth">120dp</item>
    </style>


    <style name="questionText">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>
    <style name="answerText">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
