<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="RealTalk">
        <!-- Customize your theme here. -->
    </style>


    <style name="RealTalk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/status_bar_color</item>
    </style>

    <style name="RealTalk.TabBar" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabMaxWidth">120dp</item>
    </style>

    <!--Realtalk details question text style / being used inside RealTalkFragment.java-->
    <style name="questionText">
        <item name="android:textColor">@color/questionColour</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Realtalk details answer text style / being used inside RealTalkFragment.java-->
    <style name="answerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Twitter card style-->
    <style name="twitterStyle">
        <item name="android:foreground">@drawable/twitter_stroke</item>
    </style>

    <!--Profile tab-bar style-->
    <style name="RealTalk.ProfileTab">
        <item name="tabBackground">@color/yellow</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Floating label padding for edit text(signUp,Login)-->
    
    <style name="floatingLabel" parent="TextAppearance.AppCompat">
        <!--//hint color And Label Color in False State-->
        <item name="android:textColor">@color/wikiPediaCardBgColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <!--//Label color in True State And Bar Color False And True State-->
        <item name="colorAccent">@color/wikiPediaCardBgColor</item>
        <item name="colorControlNormal">@color/wikiPediaCardBgColor</item>
    </style>

</resources>
